<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/avatar_image"
        android:src="@drawable/heart_filled"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/reviewer_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/avatar_image"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/review_content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/reviewer_name_text_view"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_below="@+id/reviewer_name_text_view"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_more_string"
        android:layout_below="@+id/review_content_text_view"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:textColor="@color/colorAccent"
        android:background="#00FFFFFF"
        android:id="@+id/show_more_or_less_button"/>
</RelativeLayout>