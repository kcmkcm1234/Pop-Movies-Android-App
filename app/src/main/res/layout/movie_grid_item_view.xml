<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_poster_image_view"/>
    <RelativeLayout
        android:id="@+id/movie_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">







        <!--I was unable to get this grid view item tile workig and i used a simple one with just the poster-->








        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Batman v Superman: Dawn Of Justice"
            android:lines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:layout_weight="0"
            android:id="@+id/movie_name_text_view_grid_item"/>
        <ImageView
            android:id="@+id/movie_favorite_button_grid_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:src="@drawable/heart_big"
            android:tint="#FFFFFF"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_weight="2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</RelativeLayout>